<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".one"
    android:background="@drawable/backmain">

    <ImageView
        android:id="@+id/homeicon"
        android:layout_width="43dp"
        android:layout_height="44dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="80dp"
        android:src="@drawable/homeicon" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="183dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardb1"
                android:layout_width="350dp"
                android:layout_height="125dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="30dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/shadow"
                app:cardBackgroundColor="#FECA6B"
                app:cardCornerRadius="25dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="110dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/amaranth_bold"
                        android:paddingStart="10dp"
                        android:paddingTop="5dp"
                        android:text="Shyam Baba Aarti"
                        android:textColor="#633202"
                        android:textSize="20dp">

                    </TextView>

                    <TextView
                        android:layout_width="250dp"
                        android:layout_height="35dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="30dp"
                        android:fontFamily="@font/poppins_regular"
                        android:paddingLeft="0dp"
                        android:paddingTop="5dp"
                        android:text="ॐ    जय श्री श्याम हरे, बाबा जय"
                        android:textColor="#b7620e"
                        android:textSize="17dp">

                    </TextView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ganeshji"></ImageView>

                    <TextView
                        android:layout_width="230dp"
                        android:layout_height="35dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="30dp"
                        android:fontFamily="@font/poppins_regular"
                        android:paddingLeft="5dp"
                        android:paddingTop="5dp"
                        android:text="Om Jai Shri Shyam Hare"
                        android:textColor="#b7620e"
                        android:textSize="17sp">

                    </TextView>


                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardb2"
                android:layout_width="350dp"
                android:layout_height="125dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="30dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/shadow"
                app:cardBackgroundColor="#FECA6B"
                app:cardCornerRadius="25dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="110dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/amaranth_bold"
                        android:paddingLeft="35dp"
                        android:paddingTop="5dp"
                        android:text="Sai Baba Aarti"
                        android:textColor="#633202"
                        android:textSize="20dp">

                    </TextView>

                    <TextView
                        android:layout_width="250dp"
                        android:layout_height="35dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="30dp"
                        android:fontFamily="@font/poppins_regular"
                        android:paddingTop="5dp"
                        android:text="आरती श्री साईं गुरुवर की"
                        android:textColor="#b7620e"
                        android:textSize="18dp">

                    </TextView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ganeshji"></ImageView>

                    <TextView
                        android:layout_width="242dp"
                        android:layout_height="35dp"
                        android:layout_marginStart="4dp"
                        android:layout_marginTop="30dp"
                        android:fontFamily="@font/poppins_regular"
                        android:paddingLeft="15dp"
                        android:paddingTop="5dp"
                        android:text="Aarti Shri Sai Guruvara Ki"
                        android:textColor="#b7620e"
                        android:textSize="16.5sp">

                    </TextView>


                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/cardb3"
                android:layout_width="350dp"
                android:layout_height="125dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="30dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/shadow"
                app:cardBackgroundColor="#FECA6B"
                app:cardCornerRadius="25dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="110dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="30dp"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/amaranth_bold"
                        android:paddingLeft="20dp"
                        android:paddingTop="5dp"
                        android:text="Mahavir Aarti"
                        android:textColor="#633202"
                        android:textSize="20dp">

                    </TextView>

                    <TextView
                        android:layout_width="250dp"
                        android:layout_height="35dp"
                        android:layout_marginStart="30dp"
                        android:layout_marginTop="30dp"
                        android:fontFamily="@font/poppins_regular"
                        android:paddingLeft="5dp"
                        android:paddingTop="5dp"
                        android:text="ॐ    जय महावीर प्रभो"
                        android:textColor="#b7620e"
                        android:textSize="18dp">

                    </TextView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ganeshji"></ImageView>

                    <TextView
                        android:layout_width="230dp"
                        android:layout_height="35dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="30dp"
                        android:fontFamily="@font/poppins_regular"

                        android:paddingTop="5dp"
                        android:text="Om Jai Mahavir Prabhu"
                        android:textColor="#b7620e"
                        android:textSize="17sp">

                    </TextView>


                </LinearLayout>
            </androidx.cardview.widget.CardView>


        </LinearLayout>

    </ScrollView>

</RelativeLayout>